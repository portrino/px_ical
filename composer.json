{
    "name": "portrino/px_ical",
    "description": "Provides classes to render ical via eluceo iCal lib (https://github.com/markuspoerschke/iCal)",
    "type": "typo3-cms-extension",
    "keywords": [
        "TYPO3",
        "CMS",
        "ical",
        "ics",
        "typo3",
        "portrino"
    ],
    "homepage": "http://typo3.org",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Andre Wuttig",
            "email": "wuttig@portrino.de",
            "homepage": "http://www.portrino.de",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "dev@portrino.de",
        "issues": "https://github.com/portrino/px_ical/issues",
        "source": "https://github.com/portrino/px_ical"
    },
    "require": {
        "typo3/cms": "^7.6",
        "eluceo/ical": "~0.11.3"
    },
    "require-dev": {
        "codeception/codeception": "~2.3.6",
        "helhum/typo3-console": "^4.9",
        "nimut/testing-framework": "^1.0",
        "phpunit/phpunit": "~4.8.0",
        "squizlabs/php_codesniffer": "~3.0.2"
    },
    "autoload": {
        "psr-4": {
            "Portrino\\PxICal\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Portrino\\PxICal\\Tests\\": "Tests"
        }
    },
    "replace": {
        "px_ical": "*"
    },
    "config": {
        "vendor-dir": "build/vendor",
        "bin-dir": "build/bin"
    },
    "scripts": {
        "acceptance-test": "build/bin/codecept run -c Tests/Acceptance/codeception.yml --no-interaction",
        "acceptance-test": "build/bin/codecept run -c Tests/Acceptance/codeception.yml --no-interaction",
        "post-autoload-dump": [
            "mkdir -p build/web/typo3conf/ext/",
            "[ -L build/web/typo3conf/ext/px_ical ] || ln -snvf ../../../../. build/web/typo3conf/ext/px_ical"
        ]
    },
    "extra": {
        "helhum/typo3-console": {
            "install-binary": false,
            "install-extension-dummy": false
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": "build/web"
        }
    }
}
